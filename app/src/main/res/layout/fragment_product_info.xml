<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/penImageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:cropToPadding="true"
        android:src="@drawable/pen"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@id/guideline12"
        app:layout_constraintStart_toEndOf="@id/guideline11"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription"/>
    
    <view
        android:id="@+id/view1"
        android:layout_width="1dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/penImageView"
        app:layout_constraintEnd_toStartOf="@id/guideline11"/>

    <view
        android:id="@+id/view2"
        android:layout_width="1dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/penImageView"
        app:layout_constraintEnd_toStartOf="@id/guideline12"/>

    <view
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/penImageView"
        app:layout_constraintEnd_toStartOf="@id/guideline14"
        app:layout_constraintStart_toEndOf="@id/guideline13"/>

    <view
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintEnd_toStartOf="@id/guideline14"
        app:layout_constraintStart_toEndOf="@id/guideline13"/>

    <view
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/view4"
        app:layout_constraintEnd_toStartOf="@id/guideline14"
        app:layout_constraintStart_toEndOf="@id/guideline13"/>

    <view
        android:id="@+id/view6"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/view5"
        app:layout_constraintEnd_toStartOf="@id/guideline14"
        app:layout_constraintStart_toEndOf="@id/guideline13"/>

    <view
        android:id="@+id/view7"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/view6"
        app:layout_constraintEnd_toStartOf="@id/guideline14"
        app:layout_constraintStart_toEndOf="@id/guideline13"/>

    <TextView
        android:id="@+id/infoTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Unsorted"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="65dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/penImageView"
        app:layout_constraintStart_toEndOf="@id/guideline13"/>

    <TextView
        android:id="@+id/infoTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/A1"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintStart_toEndOf="@id/guideline13"/>
    <TextView
        android:id="@+id/infoTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/A2"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/view4"
        app:layout_constraintStart_toEndOf="@id/guideline13"/>
    <TextView
        android:id="@+id/infoTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/A3"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/view5"
        app:layout_constraintStart_toEndOf="@id/guideline13"/>
    <TextView
        android:id="@+id/infoTextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/A4"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/view6"
        app:layout_constraintStart_toEndOf="@id/guideline13"/>
    <TextView
        android:id="@+id/infoNumberTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/A100"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="65dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/penImageView"
        app:layout_constraintStart_toEndOf="@id/guideline11"/>
    <TextView
        android:id="@+id/infoNumberTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/A90"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintStart_toEndOf="@id/guideline11"/>
    <TextView
        android:id="@+id/infoNumberTextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/A80"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/view4"
        app:layout_constraintStart_toEndOf="@id/guideline11"/>
    <TextView
        android:id="@+id/infoNumberTextView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/A70"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/view5"
        app:layout_constraintStart_toEndOf="@id/guideline11"/>
    <TextView
        android:id="@+id/infoNumberTextView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/A60"
        android:textSize="22dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        app:layout_constraintTop_toBottomOf="@id/view6"
        app:layout_constraintStart_toEndOf="@id/guideline11"/>

    <Button
        android:id="@+id/infoButton1"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="@string/Move"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlue"
        android:layout_marginTop="60dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/penImageView"
        app:layout_constraintStart_toEndOf="@id/guideline12"/>
    <Button
        android:id="@+id/infoButton2"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="@string/Move"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlue"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/view3"
        app:layout_constraintStart_toEndOf="@id/guideline12"/>
    <Button
        android:id="@+id/infoButton3"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="@string/Move"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlue"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/view4"
        app:layout_constraintStart_toEndOf="@id/guideline12"/>
    <Button
        android:id="@+id/infoButton4"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="@string/Move"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlue"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/view5"
        app:layout_constraintStart_toEndOf="@id/guideline12"/>
    <Button
        android:id="@+id/infoButton5"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="@string/Move"
        android:textSize="20dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlue"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/view6"
        app:layout_constraintStart_toEndOf="@id/guideline12"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.65" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9" />
</androidx.constraintlayout.widget.ConstraintLayout>